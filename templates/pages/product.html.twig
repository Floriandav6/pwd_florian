{% extends 'layouts/zay.html.twig' %}

{% block content %}


    <!-- Modal -->




    <!-- Open Content -->
    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">

                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <img class="card-img img-fluid" src="{{asset("img/couverture/"~advert.image)  }}" alt="Card image cap" id="product-detail">
                    </div>
                    <a href="{{ path('category') }}" class="btn btn-retour btn-success btn-lg" >Retour en arrière</a>
                    <div class="row">
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="prev">


                            </a>
                        </div>
                        <!--End Controls-->
                        <!--Start Carousel Wrapper-->
                        <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                            <!--Start Slides-->
                            <div class="carousel-inner product-links-wap" role="listbox">




                            </div>
                          <!--  End Slides-->
                        </div>
                        <!--End Carousel Wrapper-->
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="next">

                            </a>
                        </div>
                        <!--End Controls-->
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h2">{{ advert.title }}</h1>
                            <p class="h3 py-2">Prix: {{ advert.price }}€</p>

                            <span class="list-inline-item text-dark">Taille:  {{ advert.size }}</span>

                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Marque: </h6>
                                </li>
                                <li class="list-inline-item">
                                    <p class="text-muted"><strong>{{ advert.brand }}</strong></p>
                                </li>
                            </ul>

                            <h6>Description:</h6>
                            <br>
                            <p>{{ advert.description }}</p>
                            <br>

                                <div class="row pb-3">
                                    <div class="col d-grid">

                                        <span class="js-likes">{{ advert.likes | length}}</span><p class="like text-decoration-none" >Likes</p>
                                        {% if app.user == false %}
                                        {% elseif app.user and advert.iSLikedByUser(app.user) == false %}
                                        <a href="{{ path('like', {'id':advert.id}) }}" class="js-like-link">
                                            <i class="far fa-thumbs-up"></i>
                                        </a>

                                        {% else %}
                                        <a href="{{ path('like', {'id':advert.id}) }}" class="js-like-link">
                                            <i class="fas fa-thumbs-up"></i>
                                        </a>

                                        {% endif %}
                                         <!--    <button type="submit" class=" w-100 btn-color">Like</button> -->

                                       <!-- <button type="submit" class="btn btn-success btn-lg" name="submit" value="buy">Contacter le vendeur</button> -->
                                    </div>
                                </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

