{% extends "layouts/zay.html.twig" %}
{% block content %}
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto px-0">
                <div id="sidebar" class="collapse collapse-horizontal show border-end">
                    <div id="sidebar-nav" class="list-group border-0 rounded-0 text-sm-start min-vh-100">
                        <p class="mail-2 list-group-item border-end-0 d-inline-block text-truncate"> Annonces </p>

                    </div>
                </div>
            </div>
            <main class="col ps-md-2 pt-2">

                <div class="page-header pt-3">
                    <h2>{{ app.user.username }}</h2>
                    <p class="mail-2">{{ app.user.email }}</p>


                <div>
                <hr>
                <div class="row">
                    <div class="col-12">
                        <h3>Mes annonces</h3>
                        <div class="col-lg-9">
                            <div class="row">
                                {% for advert in adverts%}
                                    <div class="col-md-4">
                                        <div class="card mb-4 product-wap rounded-0">
                                            <div class="card rounded-0">
                                                <img class="card-img rounded-0 img-fluid" src="{{vich_uploader_asset(advert, 'imageFile')  }}">
                                                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                                    <ul class="list-unstyled">

                                                        <li><a class="btn btn-success text-white mt-2" href="{{ path('advert',{'id' : advert.id}) }}"><i class="far fa-eye"></i></a></li>

                                                    </ul>
                                                </div>
                                            </div>

                                            <div class="card-body">
                                                <a class="h3 text-decoration-none text-center mb-0">{{ advert.title }}</a>
                                                <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                                    <li>{{ advert.size }}</li>
                                                    <li class="pt-2">
                                                        <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                                        <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                                        <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                                        <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                                        <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                                    </li>
                                                </ul>
                                                <p>{{ advert.category.name }}</p>

                                                <p class="text-center mb-0">{{ advert.price }}â‚¬</p>
                                                <br>


                                                <span class="js-label"><a class="like text-decoration-none" href="">Likes</a></span>
                                                <span class="js-likes">{{ advert.likes | length}}</span>

                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}

                            </div>

                        </div>
                    </div>
                </div>
                </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
